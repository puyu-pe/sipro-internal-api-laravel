{
    "name": "puyu-pe/sipro-internal-api-laravel",
    "description": "Laravel bridge package for the internal /internal/v1 API.",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": ">=8.2",
        "illuminate/support": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/http": "^12.0",
        "puyu-pe/sipro-internal-api-core": "^0.1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "PuyuPe\\SiproInternalApiLaravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PuyuPe\\SiproInternalApiLaravel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PuyuPe\\SiproInternalApiLaravel\\SiproInternalApiLaravelServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    }
}
